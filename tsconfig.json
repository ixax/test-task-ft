{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2016",
      "es2017.object",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./@types/",
      "./node_modules/@types/"
    ],
    "locale": "ru",
    "noUnusedLocals": true
  },
  "include": [
    "./src/**/*"
  ]
}
